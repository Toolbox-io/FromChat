{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "declaration": true,
        "sourceMap": true
    },
    "include": [
        "server.ts"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
